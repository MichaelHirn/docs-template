---
layout: ./base.njk
page_css: docs.css
---

<div class="doc">
  {% include "templates/tutorial-navbar.njk" %}

  <main class="doc-content">
    <header class="doc-header">
      <p>Step {{ step }}</p>
      <h1>{{ title }}</h1>
    </header>

    <div class="doc-body">
      {{ content | safe }}
    </div>

    <footer class="doc-footer">
      <ul class="doc-pagination">
        {%- set previousPost = search.previousPage(url, "url^=/tutorial/", "step") %}
        {%- if previousPost %}
        <li class="is-prev">
          <a href="{{ previousPost.data.url }}" rel="prev">
            ← Previous 
            <strong>{{ previousPost.data.title }}</strong>
          </a>
        </li>
        {% endif %}

        {%- set nextPost = search.nextPage(url, "url^=/tutorial/", "step") %}
        {%- if nextPost %}
        <li class="is-next">
          <a href="{{ nextPost.data.url }}" rel="next">
            Next → 
            <strong>{{ nextPost.data.title }}</strong>
          </a>
        </li>
        {% endif %}
      </ul>
    </footer>
  </main>
</div>